package lambda;

import java.util.Arrays;
import java.util.Comparator;
import java.util.function.IntPredicate;

public class LambdaExercisesFor1112 {

	public static void main(String[] args) {
		//1) Use IntPredicate to print on the console all odd integers in descending order in the given array
		//2) Use IntFunction to print on the console all odd integers in descending order in the given array
		int arr[] = {12, 9, 13, 4, 6, 2, 4, 12, 15};
		oddInDescendingOrder(arr);
	}
	
	//1) IntPredicate
	public static void oddInDescendingOrder(int arr[]) {
		IntPredicate intPredicate = x-> x%2==1;
		Arrays.stream(arr)
		      .filter(intPredicate)
		      .sorted()
		      .forEach(System.out::println);		
	}
}
