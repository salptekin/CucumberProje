package lambda;

import java.util.ArrayList;
import java.util.List;

public class Lambda06 {

	public static void main(String[] args) {
		//Find the largest number in the list by using "Functional" programming
		List<Integer> list = new ArrayList<Integer>();
		list.add(12);
		list.add(9);
		list.add(13);
		list.add(4);
		list.add(6);
		list.add(2);
		list.add(4);
		list.add(12);
		list.add(15);
		
		System.out.println(largestElement(list));

	}
	
	public static int largestElement(List<Integer> list) {
		return list.stream()
				   .reduce(0, (x,y)-> x>y ? x : y);
	}

}
