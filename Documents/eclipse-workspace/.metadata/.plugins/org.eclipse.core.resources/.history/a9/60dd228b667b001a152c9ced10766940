package lambda;

import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Paths;

public class Lambda17 {

	public static void main(String[] args) throws IOException {
		// How to work with Files by using Lambda
		
		//1)Print the file on the console
		Files.lines(Paths.get("src/FileForLambda01")).forEach(System.out::println);
		
		//2)Convert to upper case all letters in the file
		Files.lines(Paths.get("src/FileForLambda01")).map(t->t.toUpperCase()).forEach(System.out::println);
		
		//3)Check if a specific word exists in the file 
		System.out.println(Files.lines(Paths.get("src/FileForLambda01")).map(t->t.contains("Lambda")));
	}

}
